{
  "version": "2.0.0",
  "presentation": {
    "reveal": "silent",
    "revealProblems": "onProblem"
  },
  "type": "shell",
  "linux": {
    "options": {
      "cwd": "code/build/linux/gmake/"
    }
  },
  "osx": {
    "options": {
      "cwd": "code/build/mac/gmake/"
    }
  },
  "windows": {
    "options": {
      "cwd": "code/build/windows/gmake/",
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "Setup orx",
      "group": "build",
      "type": "shell",
      "command": "./setup.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": ".\\setup.bat",
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": [
              "/d",
              "/c"
            ]
          }
        }
      }
    },
    {
      "label": "Build orx (debug, profile, release)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build orx (debug)",
        "Build orx (profile)",
        "Build orx (release)"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build orx (debug)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "linux": {
        "command": "make -j config=debug64",
      },
      "osx": {
        "command": "make -j config=debuguniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=debug64"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build orx (profile)",
      "group": "build",
      "type": "shell",
      "linux": {
        "command": "make -j config=profile64"
      },
      "osx": {
        "command": "make -j config=profileuniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=profile64"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build orx (release)",
      "group": "build",
      "type": "shell",
      "linux": {
        "command": "make -j config=release64"
      },
      "osx": {
        "command": "make -j config=releaseuniv64"
      },
      "windows": {
        "command": "mingw32-make.exe -j config=release64"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}